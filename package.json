{
  "name": "lineup",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "nuxt build",
    "build:digitalocean": "npm install --production=false && npm run build && npm ci",
    "confirm": "node -e \"(async () => { process.exitCode = (await require('prompts').prompt({ type: 'confirm', message: 'Continue?', name: 'value' })).value ? 0 : 1; })()\"",
    "firebase:emulators": "firebase emulators:start",
    "prefirebase:deploy": "npm run confirm",
    "firebase:deploy": "firebase deploy --only firestore",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "nuxt node .output/server/index.mjs"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.0.3",
    "@nuxtjs/color-mode": "^3.3.2",
    "@nuxtjs/tailwindcss": "^6.10.1",
    "@pinia/nuxt": "^0.5.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash-es": "^4.17.12",
    "@vueuse/integrations": "^10.6.1",
    "@vueuse/nuxt": "^10.6.1",
    "lodash-es": "^4.17.21",
    "nuxt": "^3.8.2",
    "nuxt-primevue": "^0.2.1",
    "pinia": "^2.1.7",
    "primeicons": "^6.0.1",
    "prompts": "^2.4.2"
  },
  "dependencies": {
    "@firebase/app-types": "^0.9.0",
    "firebase": "^10.6.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.5.0",
    "nanoid": "^5.0.3",
    "nuxt-vuefire": "^0.4.1",
    "qrcode": "^1.5.3",
    "sortablejs": "^1.15.0",
    "vue-qrcode": "^2.2.0",
    "vuefire": "^3.1.18"
  },
  "overrides": {
    "pinia": {
      "@vue/composition-api": {
        "vue": "^3.3.0"
      }
    }
  }
}

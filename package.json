{
  "name": "lineup",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "^9.0.0"
  },
  "scripts": {
    "build": "nuxt build",
    "build:digitalocean": "npm install --production=false && npm run build && npm ci",
    "confirm": "node -e \"(async () => { process.exitCode = (await require('prompts').prompt({ type: 'confirm', message: 'Continue?', name: 'value' })).value ? 0 : 1; })()\"",
    "firebase:emulators": "firebase emulators:start",
    "prefirebase:deploy": "npm run confirm",
    "firebase:deploy": "firebase deploy --only firestore",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "nuxt node .output/server/index.mjs"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/color-mode": "^3.3.0",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@pinia/nuxt": "^0.4.11",
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash-es": "^4.17.9",
    "@vueuse/integrations": "^10.4.1",
    "@vueuse/nuxt": "^10.4.1",
    "lodash-es": "^4.17.21",
    "nuxt": "^3.8.2",
    "pinia": "^2.1.6",
    "primeicons": "^6.0.1",
    "primevue": "^3.33.0",
    "prompts": "^2.4.2"
  },
  "dependencies": {
    "@firebase/app-types": "^0.9.0",
    "firebase": "^10.4.0",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.4.1",
    "nanoid": "^4.0.2",
    "nuxt-vuefire": "^0.3.0",
    "qrcode": "^1.5.3",
    "sortablejs": "^1.15.0",
    "vue-qrcode": "^2.2.0",
    "vuefire": "^3.1.17"
  },
  "overrides": {
    "pinia": {
      "@vue/composition-api": {
        "vue": "^3.3.0"
      }
    }
  }
}
